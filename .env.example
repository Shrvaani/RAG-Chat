# HuggingFace Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HF_MODEL_NAME=Qwen/Qwen2.5-72B-Instruct
# Alternative: meta-llama/Meta-Llama-3-70B-Instruct

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Alternative: sentence-transformers/all-mpnet-base-v2

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=rag-documents

# Web Search Configuration
# Option 1: DuckDuckGo (FREE - No API key needed)
WEB_SEARCH_PROVIDER=duckduckgo

# Option 2: Tavily (FREE tier: 1000 requests/month)
# WEB_SEARCH_PROVIDER=tavily
# TAVILY_API_KEY=your_tavily_api_key_here

# MCP Servers
MCP_VECTOR_DB_HOST=localhost
MCP_VECTOR_DB_PORT=8001
MCP_DOC_PROCESSOR_HOST=localhost
MCP_DOC_PROCESSOR_PORT=8002

# Application Settings
UPLOAD_DIR=./data/uploads
CHUNK_SIZE=512
CHUNK_OVERLAP=128
TOP_K_RETRIEVAL=10
TOP_K_RERANK=5

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
